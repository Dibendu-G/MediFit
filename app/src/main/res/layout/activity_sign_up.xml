<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".SignUp">

    <ImageView
        android:layout_width="246dp"
        android:layout_height="227dp"
        android:layout_marginLeft="65dp"
        android:src="@drawable/singupimage">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:paddingLeft="25dp"
        android:text="Sign Up"
        android:textColor="@color/blue"
        android:textSize="50dp"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="280dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/singupemail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="370dp"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:hint="Enter Email Id"
            android:paddingLeft="40dp"
            android:paddingRight="60dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundbox"
                android:inputType="textEmailAddress">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fullname"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="370dp"
            android:layout_height="65dp"
            android:layout_marginTop="05dp"
            android:hint="Enter Full Name"
            android:paddingLeft="40dp"
            android:paddingRight="60dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundbox"
                android:inputType="text">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signpswd"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="370dp"
            android:layout_height="65dp"
            android:layout_marginTop="05dp"
            android:hint="Enter Password"
            android:paddingLeft="40dp"
            android:paddingRight="60dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundbox"
                android:inputType="numberPassword">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phonenumber"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="370dp"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:hint="Enter Phone Number"
            android:paddingLeft="40dp"
            android:paddingRight="60dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundbox"
                android:inputType="number"
                android:maxLength="10">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="583dp"
        android:layout_marginBottom="50dp"
        android:text="By signing up, you're agree to our"
        android:textSize="9dp">

    </TextView>

    <TextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="583dp"
        android:layout_marginBottom="50dp"
        android:autoLink="web"
        android:text="@string/TermsAndConditions"
        android:textSize="9dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="266dp"
        android:layout_marginTop="583dp"
        android:layout_marginBottom="50dp"
        android:text="and"
        android:textSize="9dp">

    </TextView>

    <TextView
        android:id="@+id/privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="282dp"
        android:layout_marginTop="583dp"
        android:layout_marginBottom="50dp"
        android:autoLink="web"
        android:text="@string/PrivacyPolicy"
        android:textSize="9dp">

    </TextView>

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="220dp"
        android:layout_height="59dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="605dp"
        android:background="@drawable/shape"
        android:shadowColor="@color/blue"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:textStyle="bold">

    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="670dp"
        android:text="Joined us before ?"
        android:textSize="15dp">

    </TextView>

    <TextView
        android:id="@+id/backtologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="217dp"
        android:layout_marginTop="670dp"
        android:text=" Login Here"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:textStyle="bold">

    </TextView>

</RelativeLayout>