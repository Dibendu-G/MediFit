<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".phoneoremail">


    <ImageView
        android:id="@+id/image_sendotp"
        android:layout_width="350dp"
        android:layout_height="262dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/forgotpassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="@string/Forgot_Passward"
        android:textColor="@color/blue"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Choose your Phone No or Email via which you want to reset your Password"
        android:textSize="15sp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="10dp"
        android:text="Please Select Any of These To Reset Your Password">

    </TextView>

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="57dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text=" Phone No"
            android:textSize="25dp">

        </TextView>

        <ImageView
            android:id="@+id/choosephone"
            android:layout_width="26dp"
            android:layout_height="39dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/phone"
            android:shadowColor="@color/blue"
            android:text="Phone No"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="bold">

        </ImageView>

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:text="____________  OR  ____________"
            android:textSize="20dp">

        </TextView>

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text=" Email    Id"
            android:textSize="25dp">

        </TextView>

        <ImageView
            android:id="@+id/chooseemail"
            android:layout_width="44dp"
            android:layout_height="28dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/email"
            android:shadowColor="@color/blue">

        </ImageView>

    </LinearLayout>
    <Button
        android:id="@+id/buttongetotporlink"
        android:layout_width="260dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundbutton"
        android:text="Submit"
        android:layout_margin="30dp"
        android:textStyle="bold" />





</LinearLayout>

